        .dot.ion { background-color: #ff4d4d; border: 1px solid white; }
        .dot.electron { background-color: #00ffff; box-shadow: 0 0 5px #00ffff; }
        .dot.cell { border: 2px solid #ffff00; background: transparent; box-sizing: border-box; }

        .info-text {
            font-size: 0.8rem;
            color: #ccc;
            margin-top: 10px;
            line-height: 1.4;
            background: rgba(255,255,255,0.1);
            padding: 10px;
            border-radius: 6px;
        }

        #loading {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
            font-size: 1.5rem;
            pointer-events: none;
            transition: opacity 0.5s;
