<body>

    <div id="loading">Caricamento Modello 3D...</div>

    <!-- Pulsante per mostrare/nascondere il menu -->
    <button id="menu-toggle-btn">
        <span>☰</span> Chiudi Menu
    </button>
    
    <!-- Pannello di Controllo -->
    <div id="ui-panel">
        <h1>Struttura Cristallina</h1>
        
        <div class="control-group">
            <label>
                <input type="checkbox" id="toggle-electrons" checked>
                Mostra Nube Elettronica
            </label>
            <label>
                <input type="checkbox" id="toggle-cell" checked>
                Evidenzia Cella Elementare
            </label>
            <label>
                <input type="checkbox" id="toggle-lattice" checked>
                Mostra Intero Reticolo
            </label>
            <label>
                <input type="checkbox" id="animate-electrons" checked>
                Animazione Elettroni
            </label>
        </div>

        <div class="legend">
            <div class="legend-item">
                <span class="dot ion"></span> 
                <strong>Ione Metallico (+)</strong>: Atomo fisso.
            </div>
            <div class="legend-item">
                <span class="dot electron"></span> 
                <strong>Nube Elettronica</strong>: Mare mobile.
            </div>
            <div class="legend-item">
                <span class="dot cell"></span> 
                <strong>Cella Elementare</strong>: Unità ripetitiva.
            </div>
        </div>
        
        <div class="info-text" id="dynamic-info">
            Ruota con il mouse per esplorare la struttura 3D.
        </div>
    </div>

    <!-- Contenitore Canvas -->
    <div id="canvas-container"></div>

    <script>
        // 1. CONFIGURAZIONE SCENA E CAMERA
        const scene = new THREE.Scene();
        scene.background = new THREE.Color(0x111111);
        scene.fog = new THREE.Fog(0x111111, 10, 50);

        const camera = new THREE.PerspectiveCamera(60, window.innerWidth / window.innerHeight, 0.1, 1000);
        camera.position.set(6, 4, 6);

        const renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
        renderer.setSize(window.innerWidth, window.innerHeight);
        renderer.setPixelRatio(window.devicePixelRatio);
        // Collega il renderer all'elemento HTML
        document.getElementById('canvas-container').appendChild(renderer.domElement);

        // 2. CONTROLLI ORBITALI
        const controls = new THREE.OrbitControls(camera, renderer.domElement);
        controls.enableDamping = true;
        controls.dampingFactor = 0.05;
        controls.minDistance = 2;
        controls.maxDistance = 20;

        // 3. ILLUMINAZIONE
        const ambientLight = new THREE.AmbientLight(0xffffff, 0.4);
        scene.add(ambientLight);

        const pointLight = new THREE.PointLight(0xffffff, 1);
        pointLight.position.set(10, 10, 10);
        scene.add(pointLight);

        const pointLight2 = new THREE.PointLight(0x4444ff, 0.5);
        pointLight2.position.set(-10, -5, -5);
        scene.add(pointLight2);

        // 4. GRUPPI OGGETTI
        const latticeGroup = new THREE.Group();
        const electronGroup = new THREE.Group();
        const unitCellGroup = new THREE.Group();
        scene.add(latticeGroup);
        scene.add(electronGroup);
        scene.add(unitCellGroup);

        // 5. MATERIALI
        // Materiale per la nube di elettroni
        const electronMaterial = new THREE.MeshBasicMaterial({
            color: 0x00ffff,
            transparent: true,
            opacity: 0.8
        });

        // Generazione Texture procedurale per il "+" sugli ioni
        const canvas = document.createElement('canvas');
        canvas.width = 128; canvas.height = 128; // Risoluzione per nitidezza
        const ctx = canvas.getContext('2d');
        ctx.fillStyle = '#ff3333'; ctx.fillRect(0,0,128,128);

        // Disegno manuale del "+" per un controllo preciso dello spessore
        ctx.fillStyle = 'white';

        // Variabili per il controllo dello spessore e lunghezza
        const barLengthH = 15;      // Lunghezza braccio orizzontale
        const barLengthV = 25;      // Lunghezza braccio verticale
        const barThicknessH = 6;    // Spessore braccio orizzontale
        const barThicknessV = 4;    // Spessore braccio verticale

        // Calcolo centro
        const cx = 64;
        const cy = 64;

        // Disegna braccio orizzontale
        ctx.fillRect(cx - barLengthH/2, cy - barThicknessH/2, barLengthH, barThicknessH);
        // Disegna braccio verticale
        ctx.fillRect(cx - barThicknessV/2, cy - barLengthV/2, barThicknessV, barLengthV);

        const plusTexture = new THREE.CanvasTexture(canvas);

        const ionMaterialPlus = new THREE.MeshStandardMaterial({ 
            map: plusTexture, 
            color: 0xffaaaa,
            roughness: 0.4,
            metalness: 0.3
        });

        // 6. GENERAZIONE RETICOLO METALLICO
        const gridSize = 3; // Dimensione griglia 3x3x3
        const spacing = 2.0;
        const offset = ((gridSize - 1) * spacing) / 2;
        const geometrySphere = new THREE.SphereGeometry(0.5, 32, 32);

        for (let x = 0; x < gridSize; x++) {
            for (let y = 0; y < gridSize; y++) {
                for (let z = 0; z < gridSize; z++) {
                    const ion = new THREE.Mesh(geometrySphere, ionMaterialPlus);
                    
                    const posX = (x * spacing) - offset;
                    const posY = (y * spacing) - offset;
                    const posZ = (z * spacing) - offset;

                    ion.position.set(posX, posY, posZ);
                    latticeGroup.add(ion);
                }
            }
        }

        // 7. GENERAZIONE CELLA ELEMENTARE
        // Crea un cubo wireframe posizionato tra gli atomi per mostrare l'unità
        const dummyMesh = new THREE.Mesh(new THREE.BoxGeometry(spacing, spacing, spacing));
        dummyMesh.position.set(1, 1, 1); // Posizione relativa corretta
        dummyMesh.updateMatrixWorld();

        const cellHighlight = new THREE.Box3Helper(new THREE.Box3().setFromObject(dummyMesh), 0xffff00);
        unitCellGroup.add(cellHighlight);

        const cellVolume = new THREE.Mesh(
            new THREE.BoxGeometry(spacing, spacing, spacing),
            new THREE.MeshBasicMaterial({ color: 0xffff00, transparent: true, opacity: 0.1, side: THREE.DoubleSide })
        );
        cellVolume.position.set(1, 1, 1);
        unitCellGroup.add(cellVolume);

        // 8. GENERAZIONE ELETTRONI
        const electronCount = 200;
        const electrons = [];
        const electronVelocities = [];
        const bounds = (gridSize * spacing) / 1.5; 
        const particleGeo = new THREE.SphereGeometry(0.1, 8, 8);

        for(let i=0; i<electronCount; i++) {
            const electron = new THREE.Mesh(particleGeo, electronMaterial);
            
            electron.position.set(
                (Math.random() - 0.5) * bounds * 2,
                (Math.random() - 0.5) * bounds * 2,
                (Math.random() - 0.5) * bounds * 2
            );
            
            electronGroup.add(electron);
            electrons.push(electron);

            electronVelocities.push(new THREE.Vector3(
                (Math.random() - 0.5) * 0.1,
                (Math.random() - 0.5) * 0.1,
                (Math.random() - 0.5) * 0.1
            ));
        }

        // 9. LOGICA INTERFACCIA UTENTE (UI)
        const checkboxElectrons = document.getElementById('toggle-electrons');
        const checkboxCell = document.getElementById('toggle-cell');
        const checkboxLattice = document.getElementById('toggle-lattice');
        const checkboxAnimate = document.getElementById('animate-electrons');
        const infoText = document.getElementById('dynamic-info');
        const menuBtn = document.getElementById('menu-toggle-btn');
        const uiPanel = document.getElementById('ui-panel');
        const loadingScreen = document.getElementById('loading');

        // Rimuovi schermata di caricamento se l'elemento esiste
        if(loadingScreen) loadingScreen.style.display = 'none';

        // Toggle Menu
        if(menuBtn && uiPanel) {
            menuBtn.addEventListener('click', () => {
                uiPanel.classList.toggle('hidden-panel');
                const isHidden = uiPanel.classList.contains('hidden-panel');
                if (isHidden) {
                    menuBtn.innerHTML = '<span>☰</span> Menu';
                } else {
                    menuBtn.innerHTML = '<span>✕</span> Chiudi Menu';
                }
            });
        }

        // Event Listener Checkbox
        if(checkboxElectrons) {
            checkboxElectrons.addEventListener('change', (e) => {
                electronGroup.visible = e.target.checked;
                if(infoText) {
                    infoText.innerText = e.target.checked 
                        ? "La nube elettronica è delocalizzata e mobile." 
                        : "Elettroni nascosti per visualizzare meglio gli ioni.";
                }
            });
        }

        if(checkboxCell) {
            checkboxCell.addEventListener('change', (e) => {
                unitCellGroup.visible = e.target.checked;
                if(infoText && e.target.checked) {
                    infoText.innerText = "La cella evidenziata mostra la più piccola unità ripetitiva.";
                }
            });
        }

        if(checkboxLattice) {
            checkboxLattice.addEventListener('change', (e) => {
                latticeGroup.visible = e.target.checked;
            });
        }

        // 10. LOOP DI ANIMAZIONE
        function animate() {
            requestAnimationFrame(animate);

            if (checkboxAnimate && checkboxAnimate.checked && electronGroup.visible) {
                for(let i=0; i<electrons.length; i++) {
                    const e = electrons[i];
                    const v = electronVelocities[i];

                    e.position.add(v);

                    // Rimbalzo semplice ai confini
                    if(e.position.x > bounds || e.position.x < -bounds) v.x = -v.x;
                    if(e.position.y > bounds || e.position.y < -bounds) v.y = -v.y;
                    if(e.position.z > bounds || e.position.z < -bounds) v.z = -v.z;
                }
            }

            controls.update();
            renderer.render(scene, camera);
        }

        // Gestione Resize Finestra
        window.addEventListener('resize', () => {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
        });

        // Avvio
        animate();
    </script>
</body>
</html>
